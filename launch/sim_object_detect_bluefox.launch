<launch>
  <arg name="debug" default="false" />
  <arg unless="$(arg debug)" name="launch_prefix" value=""/>
  <arg     if="$(arg debug)" name="launch_prefix" value="gdb -ex run --args"/>

  <arg name="uav_name" default="$(optenv UAV_NAME uav)"/>
  <arg name="world_file" default="$(find mrs_main)/config/world_simulation.yaml"/>

  <group ns="$(arg uav_name)">
    
    <node pkg="nodelet" type="nodelet" name="object_detect_bluefox" args="standalone object_detect/ObjectDetector" output="screen" launch-prefix="$(arg launch_prefix)" >
      
      <rosparam file="$(arg world_file)" />
      <rosparam file="$(find object_detect)/config/sim_detect_params_common.yaml" />
      <rosparam file="$(find object_detect)/config/sim_detect_params_red.yaml" />
      <param name="uav_name" value="$(arg uav_name)" />

      <remap from="~rgb_image" to="bluefox/image_raw" />
      <remap from="~rgb_camera_info" to="bluefox/camera_info" />

    </node>
  
  </group>

</launch>
