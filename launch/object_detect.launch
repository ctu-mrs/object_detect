<launch>

  <arg name="uav_name" default="$(optenv UAV_NAME uav)"/>
  <arg name="world_file" default="$(find mrs_main)/config/world_simulation.yaml"/>

  <group ns="$(arg uav_name)">
    
    <node pkg="nodelet" type="nodelet" name="object_detect" args="standalone object_detect/ObjectDetector" output="screen" launch-prefix="$(arg launch_prefix)" >
      
      <rosparam file="$(arg world_file)" />
      <rosparam file="$(find object_detect)/config/detect_params_common.yaml" />
      <rosparam file="$(find object_detect)/config/detect_params_green.yaml" />
      <param name="uav_name" value="$(arg uav_name)" />

      <remap from="~dm_image" to="rs_d435/aligned_depth_to_color/image_raw" />
      <remap from="~dm_camera_info" to="rs_d435/aligned_depth_to_color/camera_info" />
      <remap from="~rgb_image" to="rs_d435/color/image_rect_color" />
      <remap from="~rgb_camera_info" to="rs_d435/color/camera_info" />

    </node>
  
  </group>

</launch>
